<div class = "container-fluid">
  <h1>Mes emails</h1>
  <ul class = 'text-center'>
  <%= button_to "Recevoir un email", emails_path,:class => "btn btn-outline-primary", remote: true, :method => :post %>
  </ul>
  <div class = "row">
    <div class="col-md-4">
      <table class="table table-striped table-sm">
        <thead class="thead-dark">
          <tr>
            <th scope="col" class = 'text-center' style="width: 10%">#</th>
            <th scope="col" class = 'text-center' style="width: 90%">Liste des emails</th>
          </tr>
        </thead>
        <tbody id='emails'> 
          <% @emails.order("id ASC").each do |email|%>
              <%= render 'email', email: email%>
          <%end%>
        </tbody>
      </table>
    </div>
    <div class="col-md-8">
      <table class="table table-striped table-sm">
        <thead class="thead-dark">
          <tr>
            <th class = 'text-center' style="width: 100%">Contenu</th>
          </tr>
        </thead>
        <tbody id='email_body'>
        </tbody>
      </table>
    </div>
  </div>
</div>


    